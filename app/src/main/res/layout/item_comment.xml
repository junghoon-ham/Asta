<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="#EAEAEA"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view_profile2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_baseline_person_60_white" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/image_view_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/color_444444"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/image_view_more"
        app:layout_constraintStart_toEndOf="@+id/card_view_profile"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="우영우" />

    <TextView
        android:id="@+id/text_view_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/color_444444"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/image_view_more"
        app:layout_constraintStart_toEndOf="@+id/card_view_profile"
        app:layout_constraintTop_toBottomOf="@+id/text_view_name"
        tools:text="좋네요" />
</androidx.constraintlayout.widget.ConstraintLayout>