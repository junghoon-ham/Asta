<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_profile"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:elevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_whatshot_24" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_444444"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/linear_layout_bidder"
        app:layout_constraintStart_toEndOf="@+id/card_view_profile"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="함슨 싸인" />

    <TextView
        android:id="@+id/text_view_start_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_444444"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/linear_layout_bidder"
        app:layout_constraintStart_toEndOf="@+id/card_view_profile"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title"
        tools:text="시작가 200,000원" />

    <TextView
        android:id="@+id/text_view_current_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_444444"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/linear_layout_bidder"
        app:layout_constraintStart_toEndOf="@+id/card_view_profile"
        app:layout_constraintTop_toBottomOf="@+id/text_view_start_price"
        tools:text="현재가 320,000원" />

    <LinearLayout
        android:id="@+id/linear_layout_bidder"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bidder"
            android:textColor="@color/color_444444"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_view_bidder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/app_red"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:text="593명" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/color_bdbdbd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_current_price" />


</androidx.constraintlayout.widget.ConstraintLayout>